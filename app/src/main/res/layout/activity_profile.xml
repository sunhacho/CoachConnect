<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <FrameLayout
            android:id="@+id/containers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints,Suspicious0dp">
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/box"
                android:layout_width="415dp"
                android:layout_height="102dp"
                android:layout_marginTop="630dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/background" />

            <ImageView
                android:id="@+id/home_ic"
                android:layout_width="52dp"
                android:layout_height="49dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="24dp"
                android:onClick="onHomeIconClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/happy_ic"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginStart="246dp"
                android:layout_marginBottom="37dp"
                android:onClick="onHappyIconClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icon" />

            <ImageView
                android:id="@+id/search_ic"
                android:layout_width="52dp"
                android:layout_height="47dp"
                android:layout_marginEnd="232dp"
                android:layout_marginBottom="24dp"
                android:onClick="onSearchIconClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/search" />

            <ImageView
                android:id="@+id/profile_ic"
                android:layout_width="49dp"
                android:layout_height="46dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="24dp"
                android:onClick="onProfileIconClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/profile"/>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="58dp"
                android:fillViewport="true"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="67dp"
                        android:text="프로필 설정"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="157dp"
                        android:layout_marginEnd="157dp"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/frame"
                        app:layout_constraintBottom_toTopOf="@+id/userName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="139dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="136dp"
                        android:layout_marginEnd="136dp"
                        android:layout_marginBottom="22dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="이름"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/imageButton1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="101dp"
                        android:layout_marginEnd="166dp"
                        android:layout_marginBottom="61dp"
                        android:text="남"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toTopOf="@+id/nameDate"
                        app:layout_constraintEnd_toStartOf="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="109dp"
                        android:layout_marginBottom="65dp"
                        android:text="여"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toTopOf="@+id/nameDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/nameDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="101dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginBottom="4dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintBottom_toTopOf="@+id/birthday"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="187dp"
                        android:layout_marginEnd="185dp"
                        android:layout_marginBottom="16dp"
                        android:text="닉네임"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/nameDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/birthdayDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="101dp"
                        android:layout_marginEnd="100dp"
                        android:layout_marginBottom="9dp"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:inputType="date"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintBottom_toTopOf="@+id/height"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="199dp"
                        android:layout_marginEnd="199dp"
                        android:layout_marginBottom="3dp"
                        android:text="키"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/heightData"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/heightData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="101dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="13dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintBottom_toTopOf="@+id/targetWeight"
                        app:layout_constraintEnd_toStartOf="@+id/cm"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/targetWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="178dp"
                        android:layout_marginEnd="178dp"
                        android:layout_marginBottom="1dp"
                        android:text="목표 체중"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/targetWeightData"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/targetWeightData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="102dp"
                        android:layout_marginBottom="51dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintBottom_toTopOf="@+id/button3"
                        app:layout_constraintEnd_toStartOf="@+id/kg"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="72dp"
                        android:layout_marginBottom="41dp"
                        android:text="(cm)"
                        app:layout_constraintBottom_toTopOf="@+id/targetWeightData"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="74dp"
                        android:layout_marginBottom="54dp"
                        android:text="(kg)"
                        app:layout_constraintBottom_toTopOf="@+id/button3"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="281dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:stateListAnimator="@null"
                        android:text="확인"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="193dp"
                        android:layout_marginEnd="192dp"
                        android:layout_marginBottom="12dp"
                        android:text="생일"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/birthdayDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="53dp"
                        android:layout_height="91dp"
                        android:layout_marginStart="85dp"
                        android:layout_marginBottom="3dp"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/manbutton"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints, SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="49dp"
                        android:layout_height="85dp"
                        android:layout_marginStart="134dp"
                        android:layout_marginEnd="90dp"
                        android:layout_marginBottom="2dp"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/womanbutton"
                        app:layout_constraintBottom_toTopOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageButton1"
                        tools:ignore="MissingConstraints, SpeakableTextPresentCheck" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>